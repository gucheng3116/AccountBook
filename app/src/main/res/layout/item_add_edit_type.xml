<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:actionBarItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/type_image_height"
        android:layout_height="@dimen/type_image_height"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_cost_type_0"/>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_icon"
        android:layout_alignEnd="@id/img_icon"
        android:src="@mipmap/ic_select_type"
        android:visibility="gone"/>

</RelativeLayout>